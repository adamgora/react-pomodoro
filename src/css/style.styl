// Import all partials
@require './_*.styl'

.btn
  background-color darken(red, 25%)
  border 0
  color white
  padding 10px 45px
  border-radius 3px
  margin: 0 5px;
  &:focus
    outline:0

#main
  height 664px
  width 376px
  margin 0 auto
  overflow hidden
  position relative

#app-front
  width 376px
  float left
  background-color red
  text-align center
  padding 80px 0 107px 0
  position relative

  #go-to-settings
    position absolute
    top 20px
    right 20px
    cursor pointer

  //button#start-stop
  //  font-size 36px

#app-back
  width 376px
  padding 102px 0 142px 0
  background-color grey
  float: left
  position absolute
  left 376px
  transition all .5s
  z-index 9999
  &.active
    left 0

  #go-to-main-screen
    position absolute
    top 20px
    left 20px
    cursor pointer
    font-size: 20px
  
  #settings-container
    text-align center
    h5
      font-size 26px
      margin 50px 0 30px 0
    .setting-value
      font-size 56px
      display inline-block
      text-align center
      min-width 150px
    .setting-modify
      display inline-block
      width 15px
      height 10px
      position relative
      top 0
      text-decoration none
      &.modify-down
        background: url('images/arrow-down.png') center center no-repeat
      &.modify-up
        background: url('images/arrow-up.png') center center no-repeat



.radial-progress
  circle-background = darken(red, 25%)
  circle-color = white
  circle-size = 300px
  transition-length = 1s
  inset-size = circle-size - 6
  inset-color = red
  background-color circle-background
  width circle-size
  height circle-size
  border-radius 50%
  margin 115px auto 0 auto
  position relative

  .counter
    font-size 73px
    line-height 0
    z-index 8888
    position absolute
    top 50%
    left 50%
    transform translateX(-50%)

  .inset
    width inset-size
    height inset-size
    position absolute
    margin-left ((circle-size - inset-size)/2)
    margin-top ((circle-size - inset-size)/2)
    background-color inset-color
    border-radius 50%

  .circle .fill, .circle .mask
    background-color circle-color
    width circle-size
    height circle-size
    position absolute
    border-radius 50%
    transition -webkit-transform transition-length
    transition -ms-transform transition-length
    transition transform transition-length
    -webkit-backface-visibility hidden

  .circle .mask
    background-color circle-background
    clip rect(0px, circle-size, circle-size, circle-size/2)
    .fill
      clip: rect(0px, circle-size/2, circle-size, 0px)
      background-color: circle-color;